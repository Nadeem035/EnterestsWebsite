<IfModule mod_headers.c>
    # Allow all origins
    Header set Access-Control-Allow-Origin "*"
    
    # Allow the following HTTP methods for cross-origin requests
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS, PUT, DELETE"
    
    # Allow the following headers in the actual request
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
    
    # Allow credentials (optional, only if needed)
    # Header set Access-Control-Allow-Credentials "true"  # Uncomment if you need to allow credentials (cookies, HTTP authentication, etc.)
</IfModule>

